{% extends "base.html.twig" %}

{% block title %}
    Modification de la recette {{recipe.name}}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Modification de la recette&nbsp;: {{recipe.name}}</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">
            Soumettre les modifications
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}